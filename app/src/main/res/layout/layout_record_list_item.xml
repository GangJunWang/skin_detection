<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_record_list_title"
        android:paddingLeft="@dimen/dp22"
        android:paddingRight="@dimen/dp22"
        android:paddingTop="@dimen/dp25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/sp12"
                android:textColor="@color/gray_22"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="水"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_record_list_date"
                android:textSize="@dimen/sp13"
                android:textColor="@android:color/white"
                android:text="今天"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/project_color_shape"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp22" />

            <TextView
                android:textSize="@dimen/sp12"
                android:textColor="@color/gray_22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="油"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="@dimen/dp25"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_record_item_left"
                android:textSize="@dimen/sp12"
                android:textColor="@color/gray_22"
                android:includeFontPadding="false"
                android:text="00%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/project_color"
            android:layout_width="@dimen/dp01"
            android:layout_height="@dimen/dp35" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp25"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_record_item_right"
                android:textSize="@dimen/sp12"
                android:textColor="@color/gray_22"
                android:includeFontPadding="false"
                android:text="00%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp22"
        android:paddingRight="@dimen/dp22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_bg_water"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp11">

            <View
                android:background="@color/gray_28"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp01" />

            <View
                android:id="@+id/v_record_left_progress"
                android:background="@drawable/healthy_good_coner_all_shape"
                android:layout_width="100dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_record_list_time"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:textSize="@dimen/sp12"
            android:textColor="@color/gray_22"
            android:includeFontPadding="false"
            android:text="14:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp11">

            <View
                android:background="@color/gray_28"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp01" />

            <View
                android:id="@+id/v_record_right_progress"
                android:background="@drawable/healthy_moderate_coner_all_shape"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_bg_oil"/>

    </LinearLayout>

</LinearLayout>