<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zizhu.skindetection.controller.fragment.SelfTakeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/project_color"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/dp03"
            android:layout_marginBottom="@dimen/dp03"
            android:id="@+id/iv_switch_camera"
            android:src="@drawable/switch_camera_selecter"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!-- 显示预览图形 -->
    <com.linj.camera.view.CameraContainer
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
